/* 继承 app.wxss */

/* Hero Card 特有样式 */
.gradient-indigo {
  background: linear-gradient(135deg, #6366F1 0%, #8B5CF6 100%);
}
.hero-bg-deco {
  position: absolute; top: -50%; right: -20%; width: 400rpx; height: 400rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
  border-radius: 50%;
}
.hero-content { position: relative; z-index: 2; max-width: 65%; }
.hero-tag { 
  background: rgba(255,255,255,0.2); backdrop-filter: blur(4px);
  padding: 6rpx 20rpx; 
  border-radius: var(--radius-full);
  font-size: 22rpx; 
  display: inline-block; margin-bottom: 20rpx; border: 1rpx solid rgba(255,255,255,0.1);
}
.hero-title { font-size: 44rpx;
  font-weight: 800; line-height: 1.2; margin-bottom: 16rpx; }
.hero-desc { opacity: 0.9; font-size: 26rpx; }
.hero-icon {
  position: absolute; right: 40rpx;
  bottom: 40rpx; font-size: 100rpx;
}

/* 任务列表 */
.task-row {
  display: flex; justify-content: space-between; align-items: center;
  padding: 24rpx; 
  border-radius: var(--radius-md);
  margin-bottom: 20rpx;
}

.active-task { background: #fff; border: 2rpx solid #EEF2FF; box-shadow: var(--shadow-sm); }
.dim-task { background: #F9FAFB; border: 2rpx solid transparent; opacity: 0.7; }
.hover-scale { 
  transform: scale(0.98); 
  transition: transform 0.1s;
}

.icon-box { width: 88rpx; height: 88rpx;
  border-radius: var(--radius-md);
  display: flex; align-items: center; justify-content: center; font-size: 40rpx; }
.gradient-indigo-light { background: #EEF2FF; color: var(--primary); }
.gradient-green-light { background: #ECFDF5; color: var(--success); }
.task-reward { font-size: 24rpx; color: var(--primary); font-weight: 500; margin-top: 4rpx; }
.text-gray { color: var(--text-sub); }

/* 修改前的按钮样式 (如果需要保留旧的引用可以留着，但这里我们主要用新的) */
.btn-action {
  background: #1F2937; color: #fff; font-size: 24rpx; 
  padding: 14rpx 32rpx; 
  border-radius: var(--radius-full);
  font-weight: 600; margin: 0;
}

/* 新增：更精致小巧的按钮样式 */
.btn-action-sm {
  background: #1F2937; color: #fff; 
  font-size: 24rpx; font-weight: 600;
  padding: 10rpx 28rpx; /* 减小内边距 */
  border-radius: var(--radius-full);
  line-height: 1.5; /* 确保文字垂直居中 */
  margin: 0;
  min-height: 0; /* 覆盖小程序按钮默认最小高度 */
  width: auto; /* 覆盖可能的宽度 */
}

.status-badge { font-size: 22rpx; color: #9CA3AF; background: #E5E7EB; padding: 8rpx 20rpx; 
  border-radius: var(--radius-full);
}

/* Grid 布局 */
.grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx; }
.career-card {
  background: #fff; padding: 40rpx 24rpx; 
  border-radius: var(--radius-card);
  display: flex; flex-direction: column;
  align-items: center; text-align: center;
  position: relative; border: 2rpx solid transparent; box-shadow: var(--shadow-sm);
}

.career-card.selected { border-color: var(--primary); background: #F5F7FF; }
.match-badge {
  position: absolute; top: 20rpx; right: 20rpx; font-size: 20rpx;
  background: #EEF2FF; color: var(--primary); padding: 4rpx 12rpx; 
  border-radius: 8rpx;
  font-weight: 700;
}
.match-badge.gray { background: #F3F4F6; color: #6B7280; }
.icon-circle { width: 100rpx; height: 100rpx; border-radius: 50%; display: flex; align-items: center;
  justify-content: center; font-size: 44rpx; margin-bottom: 20rpx; }
.bg-purple-light { background: #F3E8FF; color: var(--secondary); }
.bg-blue-light { background: #DBEAFE; color: #2563EB; }
.card-title { font-weight: 700; color: var(--text-main); font-size: 30rpx; }
.text-primary { color: var(--primary); }