.intro-page {
  position: relative;
  height: 100vh;
  width: 100%;
  background: #111827;
  color: #fff;
  overflow: hidden;
}

.bg-image {
  position: absolute; top: 0; left: 0; width: 100%; height: 60%;
  opacity: 0.6;
}
.bg-overlay {
  position: absolute; top: 0; left: 0; width: 100%; height: 60%;
  background: linear-gradient(to bottom, rgba(17, 24, 39, 0.2), #111827);
}

.nav-bar {
  position: absolute; top: 0; left: 0; width: 100%;
  padding-top: 100rpx; padding-left: 32rpx;
  z-index: 100;
}
.back-btn {
  width: 64rpx; height: 64rpx; border-radius: 50%;
  background: rgba(255,255,255,0.1); backdrop-filter: blur(10px);
  display: flex; align-items: center; justify-content: center;
  font-size: 40rpx; font-weight: bold;
}

.content-wrapper {
  position: absolute; bottom: 0; left: 0; width: 100%;
  height: 65%;
  background: #fff;
  border-radius: 48rpx 48rpx 0 0;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  display: flex; flex-direction: column;
}

.tag {
  display: inline-block;
  background: #EEF2FF; color: #6366F1;
  padding: 8rpx 20rpx; border-radius: 99rpx;
  font-size: 24rpx; font-weight: 600; margin-bottom: 24rpx;
}

.title {
  font-size: 64rpx; font-weight: 800; color: #1F2937;
  line-height: 1.1; margin-bottom: 32rpx;
}

.desc {
  font-size: 28rpx; color: #6B7280; line-height: 1.6;
  margin-bottom: 60rpx;
}

.info-grid {
  display: flex; justify-content: space-between;
  margin-bottom: 60rpx;
}

.info-item {
  background: #F9FAFB; border-radius: 24rpx;
  padding: 24rpx; width: 28%;
  text-align: center;
}

.icon { font-size: 40rpx; margin-bottom: 12rpx; }
.label { font-size: 22rpx; color: #9CA3AF; margin-bottom: 4rpx; }
.val { font-size: 30rpx; font-weight: 700; color: #1F2937; }

.tips-box {
  background: #FFFBEB; border: 1rpx solid #FEF3C7;
  border-radius: 24rpx; padding: 24rpx 32rpx;
  margin-bottom: auto; /* 把按钮推到底部 */
}
.tips-title { font-size: 26rpx; font-weight: 700; color: #92400E; margin-bottom: 8rpx; }
.tips-content { font-size: 24rpx; color: #B45309; opacity: 0.9; line-height: 1.4; }

.btn-start {
  width: 100%; background: #111827; color: #fff;
  border-radius: 99rpx; font-size: 32rpx; font-weight: 600;
  padding: 32rpx 0; margin-top: 40rpx;
}