.quiz-page {
  background-color: #F3F4F6;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.nav-header {
  padding: 100rpx 32rpx 20rpx;
  display: flex;
  align-items: center;
  background: #fff;
}

.back-btn {
  font-size: 40rpx;
  font-weight: bold;
  padding: 10rpx 20rpx 10rpx 0;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background: #F3F4F6;
  border-radius: 10rpx;
  margin: 0 24rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: var(--primary);
  border-radius: 10rpx;
  transition: width 0.3s ease;
}

.step-text {
  font-size: 28rpx;
  color: #9CA3AF;
  font-weight: 600;
}

.question-container {
  flex: 1;
  padding: 40rpx;
  display: flex;
  align-items: center;
}

.question-card {
  background: #fff;
  width: 100%;
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  box-shadow: var(--shadow-lg);
  animation: fadeInUp 0.5s ease;
}

@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(40rpx); }
  to { opacity: 1; transform: translateY(0); }
}

.q-tag {
  color: var(--primary);
  font-weight: 700;
  font-size: 26rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  text-transform: uppercase;
}

.q-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1F2937;
  line-height: 1.4;
  margin-bottom: 60rpx;
}

.option-item {
  border: 2rpx solid #E5E7EB;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  transition: all 0.2s;
}

.option-hover {
  background: #EEF2FF;
  border-color: var(--primary);
}

.opt-label {
  width: 60rpx;
  height: 60rpx;
  background: #F3F4F6;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
  font-size: 28rpx;
  color: #4B5563;
  margin-right: 24rpx;
}

.option-hover .opt-label {
  background: var(--primary);
  color: #fff;
}

.opt-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #374151;
}