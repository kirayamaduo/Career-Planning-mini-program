.detail-page {
  background: #fff;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

.header-image-area {
  height: 400rpx;
  position: relative;
}
.header-bg { width: 100%; height: 100%; }
.header-overlay {
  position: absolute; top: 0; left: 0; width: 100%; height: 100%;
  background: linear-gradient(to bottom, rgba(0,0,0,0.3), rgba(0,0,0,0.7));
}

.back-btn-white {
  position: absolute; top: 100rpx; left: 32rpx;
  color: #fff; font-size: 40rpx; font-weight: bold; z-index: 20;
}

.header-text {
  position: absolute; bottom: 40rpx; left: 40rpx; z-index: 10;
  color: white;
}
.career-title { font-size: 56rpx; font-weight: 800; margin-bottom: 8rpx; }
.career-sub { font-size: 28rpx; opacity: 0.9; }

.content-body {
  position: relative;
  top: -40rpx;
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  padding: 50rpx 40rpx;
}

.stats-row {
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 60rpx;
}
.stat-item { text-align: center; flex: 1; }
.stat-val { font-size: 40rpx; font-weight: 800; color: #111827; }
.stat-label { font-size: 22rpx; color: #6B7280; margin-top: 4rpx; }
.stat-divider { width: 2rpx; height: 40rpx; background: #E5E7EB; }

.section { margin-bottom: 60rpx; }
.sec-title { font-size: 34rpx; font-weight: 700; margin-bottom: 24rpx; color: #1F2937; }

.tags-wrap { display: flex; flex-wrap: wrap; gap: 20rpx; }
.skill-tag {
  background: #F3F4F6; color: #374151; padding: 12rpx 24rpx;
  border-radius: 12rpx; font-size: 26rpx; font-weight: 500;
}

/* 图表样式 */
.chart-box {
  display: flex; align-items: flex-end; justify-content: space-between;
  height: 300rpx; padding: 20rpx 10rpx 0;
  border-bottom: 2rpx solid #E5E7EB;
}
.chart-bar-group {
  display: flex; flex-direction: column; align-items: center; justify-content: flex-end;
  height: 100%; width: 100rpx; position: relative;
}
.chart-bar {
  width: 40rpx; background: #E5E7EB; border-radius: 8rpx 8rpx 0 0;
  position: relative;
}
.chart-bar.active { background: var(--primary); }

.bar-label { margin-top: 16rpx; font-size: 24rpx; color: #6B7280; }
.bar-val { position: absolute; top: -36rpx; font-size: 22rpx; color: #111827; font-weight: 600; }
.chart-bar.active + .bar-label { color: var(--primary); font-weight: bold; }

/* 路线样式 */
.roadmap-item { display: flex; align-items: flex-start; position: relative; z-index: 2; }
.rm-circle {
  width: 48rpx; height: 48rpx; background: #F3F4F6; border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-weight: bold; font-size: 24rpx; color: #9CA3AF;
  flex-shrink: 0; margin-top: 4rpx;
}
.rm-circle.active { background: var(--primary); color: #fff; }
.rm-content { margin-left: 24rpx; padding-bottom: 10rpx; }
.rm-title { font-weight: 700; font-size: 30rpx; color: #1F2937; margin-bottom: 8rpx; }
.rm-desc { font-size: 26rpx; color: #6B7280; line-height: 1.5; }

.roadmap-line {
  width: 2rpx; height: 60rpx; background: #E5E7EB;
  margin-left: 24rpx; margin-top: -10rpx; margin-bottom: 10rpx;
}

.bottom-action-bar {
  position: fixed; bottom: 0; left: 0; right: 0;
  background: #fff; padding: 20rpx 32rpx 50rpx;
  box-shadow: 0 -4rpx 12rpx rgba(0,0,0,0.05);
  z-index: 100;
}
.btn-start-plan {
  background: #111827; color: #fff; border-radius: 50rpx;
  font-weight: 600; padding: 24rpx 0;
}