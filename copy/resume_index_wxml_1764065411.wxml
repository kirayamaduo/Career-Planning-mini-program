<view class="page-wrapper {{isPageActive ? 'page-active' : ''}}">
  <view class="top-bar">
    <view class="title-lg">简历中心</view>
    <view class="coin-pill">
      <text class="coin-symbol">¥</text>
      <text class="coin-val">2,380</text>
      <image class="avatar-xs" src="https://api.dicebear.com/7.x/avataaars/svg?seed=Felix"></image>
    </view>
  </view>

  <scroll-view scroll-y class="page-content">
    <view class="container">
      
      <view class="resume-hero-card">
        <view class="bg-glow glow-1"></view>
        <view class="bg-glow glow-2"></view>

        <view class="relative z-10">
          <view class="flex-between" style="align-items: flex-start;">
            <view>
              <view class="hero-label">简历评分</view>
              <view class="score-row">
                <text class="score-num">85</text>
                <text class="score-total">/100</text>
              </view>
              <view class="rank-badge">
                <text>🏆 超过 92% 求职者</text>
              </view>
            </view>

            <view class="dashboard-gauge">
              <view class="gauge-track"></view>
              <view class="gauge-inner">
                <text class="grade-text">A</text>
                <text class="grade-sub">优秀</text>
              </view>
            </view>
          </view>

          <view class="divider-line"></view>

          <view class="flex-between">
            <view class="update-tip">上次更新: 10分钟前</view>
            <view class="flex-row">
              <view class="btn-glass mr-2" bindtap="handleAiDiagnose">AI 诊断</view>
              <view class="btn-white" bindtap="handlePreviewPdf">预览 PDF</view>
            </view>
          </view>
        </view>
      </view>

      <view class="flex-between mb-3">
        <text class="title-md">我的简历</text>
        <view class="icon-btn-sm">⚙️</view>
      </view>

      <view class="grid-2">
        <view class="card-grid-item" style="animation-delay: 0.4s;" bindtap="handleEditResume" data-id="1">
          <view class="flex-between w-full mb-2">
            <view class="icon-box-sm bg-blue-light">📄</view>
            <view class="more-dots" catchtap="handleResumeAction" data-id="1">···</view>
          </view>
          <view class="item-title mt-2">高级前端...</view>
          <view class="item-sub text-xs">2小时前更新</view>
        </view>

        <view class="card-grid-item dashed-border" hover-class="hover-bg" style="animation-delay: 0.5s;" bindtap="handleEditResume">
          <view class="plus-icon">+</view>
          <view class="text-primary font-bold text-sm mt-2">新建简历</view>
        </view>
      </view>

      <view class="mb-3 mt-4">
        <text class="title-md">优化建议</text>
      </view>

      <view class="card-item warn-style" style="animation-delay: 0.6s;" bindtap="handleOptimizationDetail" data-prompt="如何为简历增加量化数据？">
        <view class="flex-row">
          <view class="icon-mini">⚡️</view>
          <view class="ml-2">
            <view class="font-bold text-sm text-amber-900">增加量化数据</view>
            <view class="text-xs text-amber-700 opacity-80">HR 偏好看到具体的增长...</view>
          </view>
        </view>
        <view class="arrow-right text-amber-900">></view>
      </view>
      
      <view class="card-item info-style mt-2" style="animation-delay: 0.7s;" bindtap="handleOptimizationDetail" data-prompt="如何完善简历中的教育经历？">
        <view class="flex-row">
          <view class="icon-mini">🎓</view>
          <view class="ml-2">
            <view class="font-bold text-sm text-blue-900">完善教育经历</view>
            <view class="text-xs text-blue-700 opacity-80">补充主修课程可提高...</view>
          </view>
        </view>
        <view class="arrow-right text-blue-900">></view>
      </view>

    </view>
  </scroll-view>
</view>
