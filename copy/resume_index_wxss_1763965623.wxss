/* 全局容器 */
.page-container {
  min-height: 100vh;
  background-color: #F6F6F6;
  /* 移除 padding-top，改用子元素 margin */
}

/* 1. 自定义导航栏 (关键修复) */
.custom-nav {
  position: fixed; 
  top: 0; 
  left: 0; 
  right: 0; 
  width: 100%;
  background: #F6F6F6; 
  z-index: 999; /* 提高层级 */
  box-sizing: border-box;
  padding-left: 32rpx;
}

.top-bar {
  display: flex;
  align-items: center;
  width: 100%;
}

.page-title {
  font-size: 36rpx; 
  font-weight: 800;
  color: #111827;
  margin-right: 20rpx;
}

.coin-pill {
  display: flex; align-items: center;
  background: #FFF7ED; 
  border: 2rpx solid #FFEDD5;
  border-radius: 100rpx;
  padding: 4rpx 8rpx 4rpx 16rpx;
  height: 56rpx;
}

.coin-symbol { font-size: 24rpx; color: #9A3412; font-weight: 700; margin-right: 4rpx; }
.coin-val { font-size: 26rpx; color: #431407; font-weight: 800; margin-right: 12rpx; }
.avatar-xs { width: 44rpx; height: 44rpx; border-radius: 50%; border: 2rpx solid #fff; }

/* 内容区域容器 */
.scroll-content {
  width: 100%;
  /* margin-top 由 wxml style 控制 */
}

/* 2. Slogan 区 */
.slogan-section {
  padding: 20rpx 32rpx 40rpx;
}

.slogan-badge {
  display: inline-block;
  background: #E0E7FF;
  color: #4338CA;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 20rpx; font-weight: 600;
  margin-bottom: 16rpx;
}

.slogan-title { font-size: 48rpx; font-weight: 800; color: #111827; margin-bottom: 12rpx; line-height: 1.2; }
.slogan-sub { font-size: 28rpx; color: #6B7280; line-height: 1.5; }

/* 3. 核心操作区 */
.action-wrapper {
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.action-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  display: flex; justify-content: space-between; align-items: center;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02); 
  margin-bottom: 24rpx;
}
.action-card:active { background-color: #FAFAFA; }

.card-info { flex: 1; padding-right: 20rpx; }
.card-title { font-size: 30rpx; font-weight: 600; color: #1F2937; margin-bottom: 8rpx; }
.card-desc { font-size: 24rpx; color: #9CA3AF; }

.icon-circle {
  width: 80rpx; height: 80rpx;
  background: #F3F4F6;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}
.icon-circle.blue { background: #F3F4F6; } 

/* 4. 功能特性区 */
.feature-section { padding: 0 32rpx; }
.section-header {
  font-size: 28rpx; font-weight: 600; color: #374151;
  margin-bottom: 32rpx;
  padding-left: 8rpx; 
}

.feature-grid-2x2 { display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx; }

.feature-big-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex; flex-direction: column; 
  align-items: flex-start; 
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
  min-height: 180rpx; 
}

.feature-icon-box {
  width: 80rpx; height: 80rpx;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 36rpx;
  margin-bottom: 16rpx;
  background: #F9FAFB;
}

.bg-purple { background: #EEF2FF; color: #4F46E5; }
.bg-orange { background: #FFF7ED; color: #EA580C; }
.bg-blue { background: #EFF6FF; color: #2563EB; }
.bg-green { background: #F0FDF4; color: #16A34A; }

.feature-content { width: 100%; }
.feature-name { font-size: 26rpx; font-weight: 700; color: #1F2937; margin-bottom: 6rpx; }
.feature-desc { font-size: 22rpx; color: #9CA3AF; line-height: 1.4; }