.preview-page {
  min-height: 100vh;
  background: #F5F7FA;
}

/* 导航栏 */
.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  color: #fff;
}

.nav-back, .nav-right {
  width: 80rpx;
}

.nav-back {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
}

/* 预览内容区 */
.preview-content {
  height: calc(100vh - 120rpx);
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

/* 模板简历样式 */
.resume-template {
  background: #fff;
  margin: 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 个人信息头部 */
.resume-header {
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  padding: 50rpx 40rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.avatar-box {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.basic-info {
  flex: 1;
}

.name {
  font-size: 40rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.info-row {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  opacity: 0.95;
  margin-bottom: 16rpx;
  line-height: 1.6;
}

.info-item {
  margin-right: 16rpx;
}

.divider {
  margin: 0 8rpx;
  opacity: 0.5;
}

.contact-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  font-size: 24rpx;
  opacity: 0.9;
  line-height: 1.6;
}

/* 简历section */
.resume-section {
  padding: 45rpx 40rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.resume-section:last-child {
  border-bottom: none;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

.section-content {
  padding-left: 48rpx;
}

/* 求职意向 */
.job-intention {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.6;
}

.job-intention .label {
  font-weight: 600;
  color: #374151;
}

.job-intention .value {
  color: #6B7280;
}

/* 教育背景 */
.education-item {
  display: flex;
  margin-bottom: 40rpx;
  position: relative;
}

.education-item:last-child {
  margin-bottom: 0;
}

.time-line {
  width: 180rpx;
  flex-shrink: 0;
  padding-right: 30rpx;
  position: relative;
}

.time-dot {
  width: 12rpx;
  height: 12rpx;
  background: #4F46E5;
  border-radius: 50%;
  position: absolute;
  left: 0;
  top: 8rpx;
}

.time-line::after {
  content: '';
  position: absolute;
  left: 5rpx;
  top: 24rpx;
  bottom: -40rpx;
  width: 2rpx;
  background: #E5E7EB;
}

.education-item:last-child .time-line::after {
  display: none;
}

.time-text {
  font-size: 24rpx;
  color: #6B7280;
  padding-left: 30rpx;
}

.edu-content {
  flex: 1;
}

.edu-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.edu-detail {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 6rpx;
}

.edu-courses {
  font-size: 24rpx;
  color: #9CA3AF;
  line-height: 1.6;
  margin-top: 12rpx;
}

/* 工作经验 */
.work-item {
  display: flex;
  margin-bottom: 40rpx;
  position: relative;
}

.work-item:last-child {
  margin-bottom: 0;
}

.work-content {
  flex: 1;
}

.work-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.work-position {
  font-size: 26rpx;
  color: #6B7280;
  margin-bottom: 16rpx;
}

.work-responsibilities {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 1.8;
}

.resp-item {
  margin-bottom: 10rpx;
}

/* 荣誉证书 */
.cert-item {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 1.8;
  margin-bottom: 12rpx;
}

/* 语言能力 */
.skill-item {
  margin-bottom: 20rpx;
  font-size: 26rpx;
  line-height: 1.8;
}

.skill-label {
  font-weight: 600;
  color: #374151;
}

.skill-text {
  color: #6B7280;
}

/* 自我评价 */
.self-eval {
  font-size: 26rpx;
  color: #4B5563;
  line-height: 1.8;
}

/* 兴趣爱好 */
.hobby-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hobby-tag {
  padding: 12rpx 24rpx;
  background: #EEF2FF;
  border: 2rpx solid #C7D2FE;
  border-radius: 50rpx;
  font-size: 24rpx;
  color: #4F46E5;
}

/* 文本类型简历 */
.resume-text {
  background: #fff;
  margin: 30rpx;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

.text-header {
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #E5E7EB;
  margin-bottom: 30rpx;
}

.text-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #1F2937;
}

.text-content {
  font-size: 28rpx;
  line-height: 1.8;
  color: #4B5563;
}

.content-text {
  white-space: pre-wrap;
  word-break: break-all;
}

/* PDF提示 */
.pdf-hint {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  padding: 60rpx;
}

.hint-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.hint-text {
  font-size: 28rpx;
  color: #9CA3AF;
}

/* 底部占位 */
.bottom-space {
  height: 60rpx;
}

/* 底部操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.btn-edit {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(90deg, #4F46E5 0%, #7C3AED 100%);
  color: #fff;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(79, 70, 229, 0.3);
}

.btn-edit:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}
