.history-page {
  min-height: 100vh;
  background: #F9FAFB;
  display: flex;
  flex-direction: column;
}

.nav-bar {
  padding: 100rpx 32rpx 20rpx;
  background: #fff;
  display: flex;
  align-items: center;
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.back-btn {
  font-size: 40rpx;
  font-weight: bold;
  padding: 10rpx 20rpx 10rpx 0;
  color: #1F2937;
}

.page-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #111827;
  margin-left: 10rpx;
}

.history-list {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
}

.history-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.03);
  border: 2rpx solid transparent;
  transition: all 0.2s;
}

.history-card:active {
  transform: scale(0.99);
  background: #F9FAFB;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.tag {
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 600;
}
.tag-purple { background: #EEF2FF; color: #6366F1; }
.tag-blue { background: #DBEAFE; color: #2563EB; }

.date {
  font-size: 24rpx;
  color: #9CA3AF;
}

.card-body {
  margin-bottom: 30rpx;
}

.result-main {
  font-size: 36rpx;
  font-weight: 800;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.result-sub {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.4;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #F3F4F6;
  padding-top: 24rpx;
}

.score-box {
  display: flex;
  align-items: baseline;
}
.score-num { font-size: 32rpx; font-weight: 700; color: #111827; margin-right: 8rpx; }
.score-label { font-size: 22rpx; color: #9CA3AF; }

.action-btn {
  font-size: 26rpx;
  color: #6366F1;
  font-weight: 600;
}

.btn-go-test {
  background: #111827; color: #fff;
  border-radius: 50rpx; font-size: 30rpx;
  padding: 20rpx 60rpx;
}

.bottom-space { height: 60rpx; }
