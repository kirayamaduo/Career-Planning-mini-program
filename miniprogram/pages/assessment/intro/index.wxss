.intro-container {
  min-height: 100vh;
  background-color: #F9FAFB;
  display: flex;
  flex-direction: column;
  padding-bottom: 120rpx; /* 为底部按钮留出空间 */
}

.hero-section {
  background: linear-gradient(180deg, #FFFFFF 0%, #F3F4F6 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  background: #EEF2FF;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
}

.hero-icon {
  font-size: 60rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 800;
  color: #111827;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #6B7280;
  max-width: 80%;
}

.content-section {
  padding: 40rpx;
}

.info-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 60rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.info-icon {
  font-size: 40rpx;
}

.info-title {
  font-size: 24rpx;
  color: #9CA3AF;
  margin-bottom: 4rpx;
}

.info-desc {
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
}

.divider {
  width: 2rpx;
  background: #E5E7EB;
  height: 60rpx;
  align-self: center;
}

.guide-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 30rpx;
}

.guide-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.guide-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #4B5563;
}

.check-icon {
  margin-right: 20rpx;
  font-size: 28rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #FFFFFF;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.btn-primary {
  background: #1F2937;
  color: #FFFFFF;
  font-weight: 600;
  font-size: 32rpx;
  border-radius: 100rpx;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}