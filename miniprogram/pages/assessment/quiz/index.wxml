<view class="quiz-page">
  <!-- Custom NavBar -->
  <view class="nav-header">
    <view class="back-btn" bindtap="onBack">‚Üê</view>
    <view class="progress-bar">
      <view class="progress-fill" style="width: {{progress}}%"></view>
    </view>
    <view class="step-text">{{currentIndex + 1}}/{{totalQuestions}}</view>
  </view>

  <view class="question-container">
    <view class="question-card">
      <view class="q-tag">Question {{currentIndex + 1}}</view>
      <view class="q-title">{{questions[currentIndex].title}}</view>
      
      <view class="options-list">
        <block wx:for="{{questions[currentIndex].options}}" wx:key="value">
          <view class="option-item {{answers[questions[currentIndex]._id] === item.value ? 'option-hover' : ''}}" 
                hover-class="option-hover" 
                bindtap="selectOption" 
                data-value="{{item.value}}">
            <view class="opt-label">{{item.value}}</view>
            <view class="opt-text">{{item.label}}</view>
          </view>
        </block>
      </view>
    </view>
  </view>
</view>