.result-page {
  background: #F3F4F6;
  min-height: 100vh;
}

.result-header {
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  padding: 100rpx 40rpx 120rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
  text-align: center;
}

.back-btn-white {
  position: absolute; top: 100rpx; left: 32rpx;
  font-size: 40rpx; font-weight: bold; z-index: 10;
}

/* 新增分享按钮样式 */
.share-btn-white {
  position: absolute; top: 105rpx; right: 32rpx;
  font-size: 28rpx; font-weight: 600; z-index: 10;
  background: rgba(255,255,255,0.2);
  padding: 8rpx 24rpx; border-radius: 30rpx;
  backdrop-filter: blur(4px);
}

.header-content { position: relative; z-index: 5; }

.score-ring {
  width: 160rpx; height: 160rpx;
  border: 8rpx solid rgba(255,255,255,0.3);
  border-radius: 50%;
  margin: 0 auto 30rpx;
  display: flex; flex-direction: column;
  align-items: center; justify-content: center;
}

.score-val { font-size: 64rpx; font-weight: 800; line-height: 1; }
.score-label { font-size: 20rpx; opacity: 0.8; }

.result-title { font-size: 40rpx; font-weight: 700; margin-bottom: 16rpx; }
.result-desc { font-size: 26rpx; opacity: 0.9; max-width: 80%; margin: 0 auto; }

/* 装饰圆圈 */
.bg-circle { position: absolute; border-radius: 50%; background: rgba(255,255,255,0.1); }
.c1 { width: 300rpx; height: 300rpx; top: -50rpx; right: -50rpx; }
.c2 { width: 200rpx; height: 200rpx; bottom: -20rpx; left: -40rpx; }

.report-card {
  background: #fff;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -60rpx;
  position: relative; z-index: 10;
  padding: 50rpx 40rpx;
  min-height: 60vh;
}

.section-title { font-size: 32rpx; font-weight: 700; margin-bottom: 30rpx; color: #111827; }

/* 技能条 */
.skill-row { display: flex; align-items: center; margin-bottom: 24rpx; }
.skill-name { width: 120rpx; font-size: 26rpx; color: #4B5563; }
.bar-track { flex: 1; height: 16rpx; background: #F3F4F6; border-radius: 8rpx; margin: 0 20rpx; overflow: hidden; }
.bar-fill { height: 100%; background: var(--primary); border-radius: 8rpx; }
.bar-fill.warning { background: #F59E0B; }
.bar-fill.success { background: #10B981; }
.skill-val { font-weight: 700; font-size: 26rpx; color: #111827; width: 50rpx; text-align: right; }

.divider { height: 2rpx; background: #E5E7EB; margin: 40rpx 0; }

/* 职位卡片 */
.job-card {
  display: flex; align-items: center;
  background: #fff; border: 2rpx solid #F3F4F6;
  padding: 30rpx; border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}
.job-icon { width: 80rpx; height: 80rpx; background: #EEF2FF; border-radius: 16rpx; display: flex; align-items: center; justify-content: center; font-size: 40rpx; }
.job-info { flex: 1; margin-left: 24rpx; }
.job-name { font-weight: 700; font-size: 30rpx; color: #1F2937; }
.job-salary { font-size: 24rpx; color: var(--primary); margin-top: 8rpx; font-weight: 500; }
.job-arrow { color: #9CA3AF; font-weight: bold; }

.btn-save {
  background: #111827; color: #fff;
  margin-top: 60rpx; border-radius: 50rpx;
  font-size: 30rpx; font-weight: 600;
  padding: 24rpx 0;
}

/* Modal Mask */
.modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0,0,0,0.6); z-index: 100;
  display: flex; align-items: center; justify-content: center;
  animation: fadeIn 0.2s ease;
}
@keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }

.share-modal {
  width: 600rpx;
  background: transparent;
  display: flex; flex-direction: column; align-items: center;
}

.poster-preview {
  width: 100%;
  background: #fff;
  border-radius: 24rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.2);
}

.poster-header {
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  padding: 60rpx 40rpx;
  color: #fff; text-align: center;
}
.poster-title { font-size: 28rpx; opacity: 0.8; margin-bottom: 20rpx; }
.poster-type { font-size: 56rpx; font-weight: 800; }

.poster-radar-mock {
  height: 300rpx;
  display: flex; flex-direction: column;
  align-items: center; justify-content: center;
  background: #F9FAFB;
}
.radar-circle { width: 160rpx; height: 160rpx; border: 2rpx solid #E5E7EB; border-radius: 50%; margin-bottom: 20rpx; }

.poster-footer {
  padding: 40rpx;
  display: flex; align-items: center; justify-content: center;
  border-top: 2rpx solid #F3F4F6;
}
.qr-mock { width: 80rpx; height: 80rpx; background: #E5E7EB; margin-right: 20rpx; }
.qr-tip { font-size: 24rpx; color: #9CA3AF; }

.btn-save-image {
  background: #fff; color: #111827;
  font-weight: 600; font-size: 30rpx;
  padding: 20rpx 80rpx; border-radius: 50rpx;
}