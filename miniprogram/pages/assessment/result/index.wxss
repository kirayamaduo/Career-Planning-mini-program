.container {
  min-height: 100vh;
  background-color: #F9FAFB;
  padding: 30rpx;
  padding-bottom: 120rpx;
}

/* Loading */
.loading-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}
.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E5E7EB;
  border-top-color: #6366F1;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}
@keyframes spin { to { transform: rotate(360deg); } }
.loading-text { color: #6B7280; font-size: 28rpx; }


/* 结果总览卡片 */
.result-card {
  background: linear-gradient(135deg, #6366F1 0%, #4F46E5 100%);
  border-radius: 30rpx;
  padding: 50rpx 40rpx;
  color: #fff;
  position: relative;
  overflow: hidden;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 10rpx 30rpx rgba(79, 70, 229, 0.3);
}

.user-avatar image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.3);
  margin-bottom: 20rpx;
}

.result-title { font-size: 28rpx; opacity: 0.9; margin-bottom: 10rpx; }
.result-type { font-size: 48rpx; font-weight: 800; margin-bottom: 30rpx; letter-spacing: 2rpx; }

.tags-row { display: flex; justify-content: center; gap: 16rpx; flex-wrap: wrap; margin-bottom: 40rpx; }
.tag {
  background: rgba(255,255,255,0.2);
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
  font-size: 24rpx;
  backdrop-filter: blur(4px);
}

.score-circle {
  position: absolute;
  top: 30rpx; right: 30rpx;
  background: rgba(255,255,255,0.1);
  width: 100rpx; height: 100rpx;
  border-radius: 50%;
  display: flex; flex-direction: column;
  align-items: center; justify-content: center;
  border: 2rpx solid rgba(255,255,255,0.2);
}
.score-val { font-size: 36rpx; font-weight: 700; line-height: 1; }
.score-label { font-size: 18rpx; opacity: 0.8; margin-top: 4rpx; }

/* 通用卡片 */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
}
.section-title {
  font-size: 32rpx; font-weight: 700; color: #1F2937;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #6366F1;
  padding-left: 20rpx;
}

/* 能力维度 */
.dimension-item { display: flex; align-items: center; margin-bottom: 24rpx; }
.dim-name { width: 140rpx; font-size: 26rpx; color: #4B5563; }
.dim-bar-bg { flex: 1; height: 16rpx; background: #F3F4F6; border-radius: 8rpx; overflow: hidden; margin-right: 20rpx; }
.dim-bar-fill { height: 100%; background: #818CF8; border-radius: 8rpx; }
.dim-val { font-size: 24rpx; color: #6B7280; width: 40rpx; text-align: right; }

/* 推荐岗位 */
.career-item {
  background: #F9FAFB; border-radius: 16rpx; padding: 30rpx;
  margin-bottom: 20rpx; position: relative;
}
.career-header { display: flex; justify-content: space-between; margin-bottom: 12rpx; }
.career-title { font-weight: 700; color: #111827; font-size: 30rpx; }
.match-badge { font-size: 22rpx; color: #059669; background: #ECFDF5; padding: 4rpx 12rpx; border-radius: 8rpx; }
.career-desc { font-size: 26rpx; color: #6B7280; line-height: 1.4; padding-right: 30rpx; }
.career-arrow { position: absolute; right: 30rpx; top: 50%; transform: translateY(-50%); color: #D1D5DB; }

/* 建议 */
.advice-content {
  background: #FFFBEB; color: #92400E;
  padding: 30rpx; border-radius: 16rpx;
  font-size: 28rpx; line-height: 1.6;
  position: relative;
}
.quote-icon { font-size: 60rpx; opacity: 0.2; position: absolute; top: 10rpx; left: 10rpx; line-height: 1; }

/* 底部按钮 */
.footer-action {
  margin-top: 40rpx;
}
.btn-home {
  background: #fff; border: 2rpx solid #E5E7EB; color: #374151;
  border-radius: 44rpx; font-weight: 600; font-size: 30rpx;
}