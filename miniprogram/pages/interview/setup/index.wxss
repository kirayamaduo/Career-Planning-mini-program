.setup-page {
  min-height: 100vh;
  background: #F5F7FA;
}

/* 顶部导航 */
.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  color: #fff;
}

.nav-back, .nav-right {
  width: 80rpx;
}

.nav-back {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
}

/* 内容区域 */
.setup-content {
  height: 100vh;
  padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
}

.container {
  padding: 100rpx 30rpx;
}

/* Section */
.section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 24rpx;
}

/* 岗位选择 */
.position-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.position-card {
  background: #fff;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.2s;
}

.position-card.active {
  border-color: #4F46E5;
  background: #EEF2FF;
}

.position-icon {
  font-size: 48rpx;
}

.position-name {
  font-size: 26rpx;
  color: #374151;
  font-weight: 600;
}

.position-card.active .position-name {
  color: #4F46E5;
}

/* 难度选择 */
.level-tabs {
  display: flex;
  gap: 20rpx;
}

.level-tab {
  flex: 1;
  background: #fff;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  transition: all 0.2s;
}

.level-tab.active {
  border-color: #4F46E5;
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  color: #fff;
}

/* 面试类型 */
.type-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.type-card {
  background: #fff;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  padding: 30rpx 32rpx;
  transition: all 0.2s;
}

.type-card.active {
  border-color: #4F46E5;
  background: #EEF2FF;
}

.type-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
  margin-bottom: 8rpx;
}

.type-card.active .type-name {
  color: #4F46E5;
}

.type-desc {
  font-size: 24rpx;
  color: #6B7280;
}

/* 面试模式 */
.section-subtitle {
  font-size: 24rpx;
  color: #6B7280;
  font-weight: 400;
  margin-left: 10rpx;
}

.mode-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.mode-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  border: 3rpx solid transparent;
  transition: all 0.3s;
}

.mode-card.active {
  border-color: #4F46E5;
  box-shadow: 0 8rpx 24rpx rgba(79, 70, 229, 0.15);
  transform: translateY(-2rpx);
}

.mode-header {
  display: flex;
  align-items: center;
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.mode-icon {
  font-size: 40rpx;
}

.mode-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
  flex: 1;
}

.mode-card.active .mode-name {
  color: #4F46E5;
}

.mode-badge {
  background: linear-gradient(90deg, #4F46E5 0%, #7C3AED 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 100rpx;
}

.mode-desc {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.6;
  margin-bottom: 15rpx;
}

.mode-features {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
}

.feature-tag {
  background: #F3F4F6;
  color: #6B7280;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 100rpx;
}

.mode-card.active .feature-tag {
  background: rgba(79, 70, 229, 0.1);
  color: #4F46E5;
}

/* 底部占位 */
.bottom-placeholder {
  height: 120rpx;
}

/* 底部按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.btn-start {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(90deg, #4F46E5 0%, #7C3AED 100%);
  color: #fff;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(79, 70, 229, 0.3);
}

.btn-start:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}

