<view class="page-wrapper {{isPageActive ? 'page-active' : ''}}">
  <view class="top-bar">
    <view class="title-lg">职业地图</view>
    <view class="coin-pill">
      <text class="coin-symbol">¥</text>
      <text class="coin-val">2,380</text>
      <image class="avatar-xs" src="https://api.dicebear.com/7.x/avataaars/svg?seed=Felix"></image>
    </view>
  </view>

  <scroll-view scroll-y class="page-content">
    <view class="container">
      
      <view class="card flex-between">
        <view class="flex-row">
          <view class="job-icon-box">&lt;/&gt;</view>
          <view class="ml-3">
            <view class="title-md">前端工程师</view>
            <view class="sub-text mt-2">Lv.2 | 经验 2年</view>
          </view>
        </view>
        <view class="icon-btn-light">✏️</view>
      </view>

      <view class="map-card-container">
        <view class="map-header">
          <text class="map-title">能力图谱</text>
          <view class="map-legend">
            <view class="dot active"></view><text>已点亮</text>
          </view>
        </view>

        <view class="mindmap-wrapper">
          
          <view class="core-center">
            <view class="core-inner">&lt;/&gt;</view>
            <view class="core-halo"></view>
          </view>

          <view class="branch-ray" style="transform: rotate(-35deg); --branch-length: 200rpx;">
            <view class="branch-line" style="--branch-length: 200rpx;"></view>
            <view class="node-item" style="--node-offset: 260rpx;">
              <view class="node-circle">架</view>
              <text class="node-text">架构师</text>
            </view>
          </view>

          <view class="branch-ray" style="transform: rotate(145deg); --branch-length: 200rpx;">
            <view class="branch-line" style="--branch-length: 200rpx;"></view>
            <view class="node-item" style="--node-offset: 260rpx;">
              <view class="node-circle">全</view>
              <text class="node-text">全栈</text>
            </view>
          </view>

          <view class="branch-ray" style="transform: rotate(210deg); --branch-length: 150rpx; opacity: 0.6;">
             <view class="branch-line dashed" style="--branch-length: 150rpx;"></view>
             <view class="node-item" style="--node-offset: 210rpx;">
               <view class="node-circle small">?</view>
             </view>
          </view>

           <view class="branch-ray" style="transform: rotate(50deg); --branch-length: 150rpx; opacity: 0.6;">
             <view class="branch-line dashed" style="--branch-length: 150rpx;"></view>
             <view class="node-item" style="--node-offset: 210rpx;">
               <view class="node-circle small">?</view>
             </view>
          </view>

        </view>
      </view>

      <view class="section-header mb-3 mt-4">
        <text class="title-md">下一阶段目标</text>
      </view>
      <view class="card">
        <view class="flex-between">
          <view class="flex-row">
            <view class="step-circle">1</view>
            <view class="ml-3">
              <view class="text-bold">掌握 Node.js 高级特性</view>
              <view class="sub-text">后端基础</view>
            </view>
          </view>
          <text class="text-xs text-primary">进行中</text>
        </view>
      </view>

    </view>
  </scroll-view>
</view>