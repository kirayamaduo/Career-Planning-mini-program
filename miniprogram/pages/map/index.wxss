/* 状态卡片 */
.job-icon-box {
  width: 100rpx; height: 100rpx; background: #EFF6FF; color: var(--primary);
  border-radius: var(--radius-md);
  display: flex; align-items: center;
  justify-content: center;
  font-size: 40rpx; font-weight: bold;
  flex-shrink: 0;
}
.icon-btn-light {
  width: 80rpx; height: 80rpx; background: #F3F4F6; border-radius: 50%;
  display: flex; align-items: center; justify-content: center; color: var(--text-sub);
}

/* 地图卡片容器 */
.map-card-container {
  background: #0F172A;
  border-radius: var(--radius-card);
  padding: 40rpx; 
  color: #fff;
  min-height: 700rpx;
  position: relative;
  box-shadow: var(--shadow-lg);
  overflow: hidden;
  margin-bottom: 40rpx;
}

.map-header { display: flex; justify-content: space-between; margin-bottom: 40rpx; position: relative; z-index: 10; }
.map-title { font-weight: bold; letter-spacing: 2rpx; font-size: 32rpx; }
.map-legend { font-size: 24rpx; opacity: 0.6; display: flex; align-items: center; gap: 12rpx; }
.dot { width: 12rpx; height: 12rpx; border-radius: 50%; background: #6366F1; }

/* --- 思维导图核心样式 --- */
.mindmap-wrapper {
  position: absolute; top: 55%; left: 50%;
  transform: translate(-50%, -50%);
  width: 100%; height: 100%;
  display: flex; justify-content: center; align-items: center;
}

/* 中心核心 */
.core-center {
  position: relative; z-index: 10;
  width: 120rpx; height: 120rpx;
  display: flex; align-items: center; justify-content: center;
}
.core-inner {
  width: 100%; height: 100%;
  background: linear-gradient(135deg, #6366F1, #A855F7);
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 48rpx; font-weight: bold;
  position: relative; z-index: 2;
  box-shadow: 0 0 40rpx rgba(99, 102, 241, 0.4);
}
.core-halo {
  position: absolute; top: -20rpx; left: -20rpx; right: -20rpx; bottom: -20rpx;
  background: rgba(99, 102, 241, 0.2);
  border-radius: 50%;
  /* 循环呼吸动画 */
  animation: pulse-subtle 3s infinite ease-in-out; 
}

/* 发散射线容器 */
.branch-ray {
  position: absolute;
  top: 50%; left: 50%;
  transform-origin: 0 0;
  height: 4rpx;
  z-index: 5;
  /* 移除入场动画 */
}

/* 不同分支的旋转角度 (保持不变) */
.branch-ray:nth-child(2) { transform: rotate(-35deg); }
.branch-ray:nth-child(3) { transform: rotate(145deg); }
.branch-ray:nth-child(4) { transform: rotate(210deg); }
.branch-ray:nth-child(5) { transform: rotate(50deg); }

/* 连接线 */
.branch-line {
  position: absolute;
  left: 60rpx;
  width: var(--branch-length, 200rpx);
  height: 100%;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 4rpx;
  transform-origin: left center;
  /* 静态显示 */
  transform: scaleX(1);
}
.branch-line.dashed {
  background: transparent;
  border-bottom: 4rpx dashed rgba(255, 255, 255, 0.15);
  height: auto;
}

/* 节点 */
.node-item {
  position: absolute;
  left: var(--node-offset, 260rpx);
  display: flex; flex-direction: column; align-items: center;
  transform: rotate(0deg); 
  /* 循环悬浮动画 */
  animation: float-y 4s ease-in-out infinite;
}

/* 为不同节点设置交错的动画延迟，看起来更自然 */
.branch-ray:nth-child(2) .node-item { animation-delay: 0s; }
.branch-ray:nth-child(3) .node-item { animation-delay: 1.5s; }
.branch-ray:nth-child(4) .node-item { animation-delay: 0.5s; }
.branch-ray:nth-child(5) .node-item { animation-delay: 2s; }

.node-circle {
  width: 80rpx; height: 80rpx;
  background: #1E293B;
  border: 4rpx solid #60A5FA;
  border-radius: 50%;
  display: flex; align-items: center; justify-content: center;
  font-size: 28rpx; font-weight: bold;
  box-shadow: 0 0 20rpx rgba(96, 165, 250, 0.4);
  z-index: 6;
}
.node-circle.small {
  width: 60rpx; height: 60rpx;
  border-color: #475569; color: #64748B;
  font-size: 24rpx;
  box-shadow: none;
}

.node-text {
  font-size: 24rpx; color: #93C5FD; margin-top: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.8);
  background: rgba(15, 23, 42, 0.6);
  padding: 4rpx 12rpx; border-radius: 8rpx;
  white-space: nowrap;
}

/* 路线列表样式 */
.step-circle {
  width: 56rpx; height: 56rpx; background: #EEF2FF; color: var(--primary);
  border-radius: 50%; display: flex; align-items: center;
  justify-content: center; font-weight: bold; font-size: 26rpx;
}

/* 职业选择器样式 - 优化版 */
.career-picker {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 32rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  cursor: pointer;
  min-width: 200rpx;
  transition: all 0.3s ease;
}

.career-picker:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.2);
}

.picker-text {
  font-size: 32rpx;
  font-weight: 700;
  color: white;
  letter-spacing: 1rpx;
}

.picker-icon {
  font-size: 24rpx;
  color: white;
  opacity: 0.9;
}

/* 加载状态 */
.loading-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 80rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: var(--text-sub);
}

/* 弹窗遮罩 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 弹窗内容 */
.modal-content {
  width: 600rpx;
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  animation: modalSlideUp 0.3s ease-out;
}

@keyframes modalSlideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

/* 弹窗头部 */
.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #E5E7EB;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}

.close-btn {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: var(--text-sub);
  cursor: pointer;
}

/* 弹窗主体 */
.modal-body {
  padding: 40rpx;
  text-align: center;
}

.modal-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.modal-desc {
  font-size: 28rpx;
  line-height: 1.6;
  color: var(--text-sub);
}

/* 弹窗底部 */
.modal-footer {
  padding: 24rpx 40rpx 40rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  background: var(--primary);
  color: white;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary:active {
  opacity: 0.8;
}