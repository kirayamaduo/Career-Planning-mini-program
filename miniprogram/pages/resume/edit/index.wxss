/* 全局容器：改为 Flex 布局，确保内容撑满屏幕 */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F3F4F6;
  position: relative;
  overflow: hidden; 
}

/* 1. 顶部品牌区 */
.brand-header {
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  padding: 0 40rpx 120rpx; 
  color: #fff;
  position: relative;
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
  flex-shrink: 0; 
}

/* 自定义导航栏 */
.nav-bar {
  position: fixed; left: 0; right: 0; z-index: 100;
  display: flex; align-items: center;
  padding-left: 20rpx;
}
.back-btn {
  width: 60rpx; height: 60rpx;
  display: flex; align-items: center; justify-content: center;
  background: rgba(0,0,0,0.15);
  border-radius: 50%;
  backdrop-filter: blur(4px);
}
.back-btn:active { background: rgba(0,0,0,0.3); }
.back-icon { font-size: 32rpx; color: #fff; font-weight: bold; padding-bottom: 4rpx; padding-right: 2rpx; }

.header-content { position: relative; z-index: 2; margin-top: 20rpx; }
.header-title { font-size: 40rpx; font-weight: 800; margin-bottom: 12rpx; letter-spacing: 1rpx; }
.header-sub { font-size: 26rpx; opacity: 0.9; font-weight: 400; }

.header-deco {
  position: absolute; top: -50%; right: -20%;
  width: 400rpx; height: 400rpx;
  background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
  border-radius: 50%;
  pointer-events: none;
}

/* 2. 编辑器容器：Flex 撑满剩余空间 */
.editor-wrapper {
  flex: 1; 
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
  margin-top: -80rpx; 
  position: relative;
  z-index: 10;
  margin-bottom: calc(140rpx + env(safe-area-inset-bottom)); 
}

/* 纸张卡片 */
.paper-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.08); 
  display: flex;
  flex-direction: column;
  flex: 1; 
  margin-bottom: 30rpx;
}

.toolbar {
  display: flex; justify-content: space-between; align-items: center;
  margin-bottom: 24rpx; padding-bottom: 20rpx;
  border-bottom: 2rpx dashed #E5E7EB;
  flex-shrink: 0;
}
.toolbar-title { font-size: 28rpx; font-weight: 700; color: #374151; }

.paste-action {
  font-size: 26rpx; color: #4F46E5;
  display: flex; align-items: center; font-weight: 600;
  background: #EEF2FF; padding: 8rpx 20rpx; border-radius: 12rpx;
}
.paste-action:active { opacity: 0.8; }
.paste-action .icon { margin-right: 6rpx; font-size: 24rpx; }

.resume-textarea {
  width: 100%; 
  flex: 1; 
  font-size: 30rpx; line-height: 1.7; color: #1F2937;
}

.placeholder-style { color: #9CA3AF; font-size: 28rpx; }

.footer-status {
  display: flex; justify-content: flex-end;
  padding-top: 20rpx;
  flex-shrink: 0;
}
.word-count { font-size: 24rpx; color: #9CA3AF; font-family: monospace; }
.word-count.warning { color: #EF4444; }

/* 3. 小贴士卡片 */
.tips-box {
  background: #FFFBEB; 
  border: 2rpx solid #FDE68A;
  border-radius: 20rpx;
  padding: 24rpx;
  display: flex; gap: 20rpx;
  flex-shrink: 0; 
}
.tips-icon { font-size: 36rpx; padding-top: 4rpx; }
.tips-content { flex: 1; }
.tips-title { font-size: 26rpx; font-weight: 700; color: #92400E; margin-bottom: 6rpx; }
.tips-text { font-size: 24rpx; color: #B45309; line-height: 1.5; }

/* 4. 底部悬浮台 */
.bottom-bar {
  position: absolute; 
  bottom: 0; left: 0; right: 0;
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(10px); 
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.05);
  z-index: 100;
}

.btn-primary {
  background: linear-gradient(90deg, #4F46E5 0%, #7C3AED 100%);
  color: #fff;
  border-radius: 100rpx;
  font-size: 32rpx; font-weight: 700;
  height: 96rpx; 
  display: flex; align-items: center; justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(79, 70, 229, 0.3);
  transition: all 0.2s;
}

/* 
   修复：使用 :not([disabled]) 来明确正常状态 
   以及 [disabled] 明确禁用状态 
*/
.btn-primary[disabled] {
  background: #E5E7EB !important; 
  color: #9CA3AF !important;      
  box-shadow: none !important;
  background-image: none !important;
}

.btn-hover { transform: translateY(2rpx); box-shadow: 0 4rpx 10rpx rgba(79, 70, 229, 0.2); }