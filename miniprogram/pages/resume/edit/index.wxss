.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F5F7FA;
}

/* 顶部导航 */
.nav-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  color: #fff;
}

.nav-back, .nav-right {
  width: 80rpx;
}

.nav-back {
  display: flex;
  align-items: center;
}

.back-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
}

/* 表单内容区 */
.form-content {
  flex: 1;
  margin-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.form-container {
  padding: 30rpx;
  padding-top: 60rpx;
}

/* Section块 */
.section-block {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #E5E7EB;
}

.section-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1F2937;
}

/* 表单组 */
.form-group {
  margin-bottom: 32rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-group.half {
  flex: 1;
}

.form-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.form-row:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #374151;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.form-label.required::after {
  content: '*';
  color: #EF4444;
  margin-left: 6rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background: #F9FAFB;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  color: #1F2937;
}

.form-input.picker {
  display: flex;
  align-items: center;
  color: #1F2937;
}

.form-input:focus {
  border-color: #4F46E5;
  background: #fff;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  background: #F9FAFB;
  border: 2rpx solid #E5E7EB;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  font-size: 28rpx;
  color: #1F2937;
  line-height: 1.6;
}

.form-textarea.small {
  min-height: 120rpx;
}

.form-textarea.large {
  min-height: 240rpx;
}

.form-textarea:focus {
  border-color: #4F46E5;
  background: #fff;
}

/* 项目块 */
.item-block {
  background: #F9FAFB;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #E5E7EB;
}

.item-block:last-of-type {
  margin-bottom: 20rpx;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx dashed #D1D5DB;
}

.item-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1F2937;
}

.item-delete {
  font-size: 26rpx;
  color: #EF4444;
  padding: 8rpx 20rpx;
  background: #FEE2E2;
  border-radius: 8rpx;
}

/* 责任项 */
.responsibility-item {
  margin-bottom: 16rpx;
  position: relative;
}

.add-responsibility {
  font-size: 24rpx;
  color: #4F46E5;
  padding: 12rpx 0;
  text-align: center;
  border: 2rpx dashed #C7D2FE;
  border-radius: 8rpx;
  margin-top: 12rpx;
}

.add-icon-sm {
  font-size: 28rpx;
  margin-right: 6rpx;
}

/* 添加按钮 */
.add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  background: linear-gradient(90deg, #EEF2FF 0%, #F5F3FF 100%);
  border: 2rpx dashed #4F46E5;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #4F46E5;
  font-weight: 600;
}

.add-btn:active {
  opacity: 0.8;
}

.add-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.add-btn-sm {
  font-size: 24rpx;
  color: #4F46E5;
  padding: 12rpx 0;
  text-align: center;
  border: 2rpx dashed #C7D2FE;
  border-radius: 8rpx;
  margin-top: 16rpx;
}

/* 证书项 */
.certificate-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.certificate-item:last-of-type {
  margin-bottom: 0;
}

.certificate-item .form-input {
  flex: 1;
}

.delete-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #EF4444;
  background: #FEE2E2;
  border-radius: 50%;
  flex-shrink: 0;
}

/* 爱好标签 */
.hobby-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hobby-tag {
  padding: 16rpx 32rpx;
  background: #F3F4F6;
  border: 2rpx solid #E5E7EB;
  border-radius: 50rpx;
  font-size: 26rpx;
  color: #6B7280;
  transition: all 0.2s;
}

.hobby-tag.active {
  background: linear-gradient(90deg, #4F46E5 0%, #7C3AED 100%);
  border-color: #4F46E5;
  color: #fff;
  font-weight: 600;
}

/* 底部占位 */
.bottom-placeholder {
  height: 200rpx;
}

/* 自定义爱好输入 */
.custom-hobby-input {
  margin-top: 24rpx;
  display: flex;
  gap: 16rpx;
  align-items: center;
}

.custom-hobby-input .form-input {
  flex: 1;
  height: 72rpx;
}

.add-hobby-btn {
  width: 72rpx;
  height: 72rpx;
  background: linear-gradient(90deg, #4F46E5 0%, #7C3AED 100%);
  color: #fff;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  flex-shrink: 0;
}

.add-hobby-btn:active {
  opacity: 0.8;
}

/* 可删除的爱好标签 */
.hobby-tag.custom {
  position: relative;
  padding-right: 48rpx;
}

.hobby-delete {
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 28rpx;
  height: 28rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #fff;
}

/* 底部操作栏 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.06);
}

.btn-save {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(90deg, #4F46E5 0%, #7C3AED 100%);
  color: #fff;
  border-radius: 100rpx;
  font-size: 32rpx;
  font-weight: 700;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 20rpx rgba(79, 70, 229, 0.3);
}

.btn-save:active {
  opacity: 0.9;
  transform: translateY(2rpx);
}
