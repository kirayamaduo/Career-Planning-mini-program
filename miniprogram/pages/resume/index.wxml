<view class="resume-container">
  <!-- Hero 区域 -->
  <view class="hero-section">
    <view class="hero-badge">AI 驱动</view>
    <view class="hero-title">让简历成为你的<br/>面试通行证</view>
    <view class="hero-desc">基于百万份优质简历训练，3秒精准诊断</view>
    <image class="hero-img" src="https://api.dicebear.com/7.x/notionists/svg?seed=Resume" mode="aspectFit"></image>
  </view>

  <!-- 操作入口区 -->
  <view class="action-section">
    <view class="action-card primary" bindtap="handleUpload">
      <view class="action-icon-box">
        <text class="action-icon">📄</text>
      </view>
      <view class="action-content">
        <view class="action-title">上传简历文件</view>
        <view class="action-desc">支持 PDF、Word、图片格式</view>
      </view>
      <view class="action-arrow">→</view>
    </view>

    <view class="action-card" bindtap="handlePaste">
      <view class="action-icon-box secondary">
        <text class="action-icon">📝</text>
      </view>
      <view class="action-content">
        <view class="action-title">粘贴简历文本</view>
        <view class="action-desc">直接输入内容，快速分析</view>
      </view>
      <view class="action-arrow">→</view>
    </view>
  </view>

  <!-- 功能特性区 -->
  <view class="feature-section">
    <view class="section-title">AI 优化引擎能力</view>
    <view class="feature-grid">
      <view class="feature-item">
        <view class="feature-icon">🔍</view>
        <view class="feature-text">ATS 筛选系统模拟</view>
      </view>
      <view class="feature-item">
        <view class="feature-icon">✍️</view>
        <view class="feature-text">专业词汇智能润色</view>
      </view>
      <view class="feature-item">
        <view class="feature-icon">⚖️</view>
        <view class="feature-text">排版布局自动建议</view>
      </view>
      <view class="feature-item">
        <view class="feature-icon">🎯</view>
        <view class="feature-text">岗位匹配度打分</view>
      </view>
    </view>
  </view>
</view>