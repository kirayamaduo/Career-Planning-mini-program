/* --- Resume Hero Card 升级版 --- */
.resume-hero-card {
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  border-radius: var(--radius-card);
  padding: 40rpx;
  position: relative;
  overflow: hidden;
  color: white;
  box-shadow: var(--shadow-lg);
  margin-bottom: 40rpx;
  /* 移除动画 */
}

/* 背景光斑装饰 */
.bg-glow { position: absolute; border-radius: 50%; filter: blur(60rpx); opacity: 0.4; }
.glow-1 { width: 300rpx; height: 300rpx; background: #F472B6; top: -100rpx; right: -50rpx; }
.glow-2 { width: 200rpx; height: 200rpx; background: #60A5FA; bottom: -60rpx; left: -40rpx; }

.relative { position: relative; }
.z-10 { z-index: 10; }

/* 左侧信息区 */
.hero-label { font-size: 24rpx; opacity: 0.8; margin-bottom: 8rpx; }
.score-row { display: flex; align-items: baseline; line-height: 1; margin-bottom: 16rpx; }
.score-num { font-size: 64rpx; font-weight: 800; letter-spacing: -2rpx; }
.score-total { font-size: 28rpx; opacity: 0.6; font-weight: 500; margin-left: 4rpx; }

.rank-badge {
  background: rgba(255,255,255,0.15); border: 1rpx solid rgba(255,255,255,0.2);
  backdrop-filter: blur(4px); padding: 8rpx 16rpx; 
  border-radius: var(--radius-sm);
  display: inline-block; font-size: 22rpx; font-weight: 600;
}

/* 右侧仪表盘 */
.dashboard-gauge {
  width: 140rpx; height: 140rpx; border-radius: 50%;
  background: conic-gradient(#fff 85%, rgba(255,255,255,0.1) 0);
  display: flex; align-items: center; justify-content: center;
  position: relative;
  box-shadow: 0 0 20rpx rgba(255,255,255,0.2);
}
.gauge-track {
  position: absolute; width: 120rpx; height: 120rpx; 
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  border-radius: 50%; z-index: 1;
}
.gauge-inner {
  position: relative; z-index: 2; display: flex; flex-direction: column; align-items: center;
}
.grade-text { font-size: 40rpx; font-weight: 800; line-height: 1; }
.grade-sub { font-size: 20rpx; opacity: 0.8; }

/* 底部操作区 */
.divider-line { height: 2rpx; background: rgba(255,255,255,0.1); width: 100%; margin: 32rpx 0; }
.update-tip { font-size: 22rpx; opacity: 0.6; }

.btn-glass {
  background: rgba(255,255,255,0.2); border: 1rpx solid rgba(255,255,255,0.3);
  color: white; padding: 12rpx 24rpx; 
  border-radius: var(--radius-full);
  font-size: 24rpx; font-weight: 600;
}
.btn-white {
  background: white; color: var(--primary); 
  padding: 12rpx 24rpx; 
  border-radius: var(--radius-full);
  font-size: 24rpx; font-weight: 700;
}
.mr-2 { margin-right: 16rpx; }

/* --- Grid Item --- */
.grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx; margin-bottom: 10rpx; }

.card-grid-item {
  background: #fff; padding: 32rpx; 
  border-radius: var(--radius-card);
  display: flex; flex-direction: column; 
  box-shadow: var(--shadow-sm); 
  min-height: 220rpx; 
  box-sizing: border-box;
  /* 移除动画 */
}
.dashed-border { border: 3rpx dashed #D1D5DB; background: #F9FAFB; align-items: center; justify-content: center; box-shadow: none; }
.hover-bg { background: #F3F4F6; }

.icon-box-sm { 
  width: 72rpx; height: 72rpx; 
  border-radius: var(--radius-md);
  display: flex; align-items: center; justify-content: center; font-size: 32rpx;
}
.bg-blue-light { background: #EFF6FF; color: #2563EB; }
.more-dots { color: #9CA3AF; font-weight: bold; letter-spacing: 2rpx; font-size: 36rpx; line-height: 1; }
.item-title { font-weight: 700; font-size: 30rpx; color: var(--text-main); }
.plus-icon { font-size: 56rpx; color: #9CA3AF; font-weight: 300; line-height: 1; margin-bottom: 16rpx; }
.text-primary { color: var(--primary); }

/* --- 建议列表 --- */
.card-item {
  padding: 28rpx; 
  border-radius: var(--radius-md);
  display: flex; justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  /* 移除动画 */
}

.warn-style { background: #FFFBEB; border: 1rpx solid #FEF3C7; }
.info-style { background: #EFF6FF; border: 1rpx solid #DBEAFE; }
.icon-mini { font-size: 36rpx; }
.text-amber-900 { color: #78350F; }
.text-amber-700 { color: #B45309; }
.text-blue-900 { color: #1E3A8A; }
.text-blue-700 { color: #1D4ED8; }
.arrow-right { font-family: monospace; font-weight: bold; font-size: 28rpx; opacity: 0.6; }