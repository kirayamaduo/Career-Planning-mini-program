/* 引入全局变量 */

/* 1. 顶栏 (复用) */
.top-bar {
  padding: 100rpx 32rpx 20rpx;
  background: rgba(243, 244, 246, 0.9); backdrop-filter: blur(10px);
  display: flex; justify-content: space-between; align-items: center;
  position: sticky; top: 0; z-index: 100;
}
.coin-pill {
  background: #FFF7ED; padding: 8rpx 12rpx 8rpx 24rpx; border-radius: 99rpx;
  display: flex; align-items: center; gap: 16rpx; border: 2rpx solid #FFEDD5;
}
.coin-symbol { color: #D97706; font-weight: 800; }
.coin-val { color: #92400E; font-weight: 700; font-size: 26rpx; }
.avatar-xs { width: 60rpx; height: 60rpx; border-radius: 50%; border: 2rpx solid #fff; }

/* 2. Hero Card (简历版) */
.hero-card {
  border-radius: 40rpx; padding: 48rpx; position: relative; overflow: hidden;
  margin-bottom: 40rpx; box-shadow: var(--shadow-lg);
}
.resume-hero {
  background: linear-gradient(120deg, #6366F1, #8B5CF6); /* 主色渐变，与测评页一致 */
}
.hero-bg-circle {
  position: absolute; top: -50rpx; right: -50rpx; width: 300rpx; height: 300rpx;
  background: rgba(255,255,255,0.1); border-radius: 50%;
}
.relative { position: relative; }
.z-10 { z-index: 10; }
.text-white { color: white; }

/* 白色圆环进度条 */
.progress-ring-white {
  width: 120rpx; height: 120rpx; border-radius: 50%;
  background: conic-gradient(#FFFFFF 80%, rgba(255,255,255,0.2) 0);
  display: flex; align-items: center; justify-content: center;
}
.ring-bg {
  width: 100rpx; height: 100rpx; background: rgba(255,255,255,0.15); 
  backdrop-filter: blur(4px); border-radius: 50%;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
}
.score-text { font-weight: 800; font-size: 36rpx; line-height: 1; color: #fff; }
.score-unit { font-size: 20rpx; color: rgba(255,255,255,0.8); }

.hero-title-md { font-size: 36rpx; font-weight: 700; }
.hero-desc { font-size: 26rpx; opacity: 0.9; }
.hero-link { font-size: 24rpx; font-weight: 600; opacity: 0.9; text-decoration: underline; }

/* 3. Grid 布局 (复用) */
.grid-2 { display: grid; grid-template-columns: 1fr 1fr; gap: 24rpx; }

.card-grid-item {
  background: #fff; padding: 32rpx; border-radius: 32rpx;
  display: flex; flex-direction: column; 
  box-shadow: var(--shadow-sm); min-height: 200rpx;
}
.dashed-border { border: 2rpx dashed #D1D5DB; background: #F9FAFB; align-items: center; justify-content: center; box-shadow: none; }
.hover-bg { background: #F3F4F6; }

.icon-box-sm {
  width: 72rpx; height: 72rpx; border-radius: 16rpx; 
  display: flex; align-items: center; justify-content: center; font-size: 32rpx;
}
.bg-blue-light { background: #EFF6FF; color: #2563EB; }
.more-dots { color: #9CA3AF; font-weight: bold; letter-spacing: 2rpx; }

.plus-icon { font-size: 48rpx; color: #9CA3AF; font-weight: 300; line-height: 1; }
.text-primary { color: var(--primary); }

/* 4. 建议列表 (复用 Card Item 但更紧凑) */
.card-item {
  padding: 24rpx; border-radius: 20rpx; display: flex; justify-content: space-between; align-items: center;
}
.warn-style { background: #FFFBEB; border: 1rpx solid #FEF3C7; }
.info-style { background: #EFF6FF; border: 1rpx solid #DBEAFE; }

.text-amber-900 { color: #78350F; }
.text-amber-700 { color: #B45309; }
.text-blue-900 { color: #1E3A8A; }
.text-blue-700 { color: #1D4ED8; }
.arrow-right { font-family: monospace; font-weight: bold; font-size: 28rpx; }