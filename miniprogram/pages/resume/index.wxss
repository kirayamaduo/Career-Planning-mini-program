.resume-container {
  min-height: 100vh;
  background-color: #F9FAFB;
  padding-bottom: 60rpx;
}

/* Hero */
.hero-section {
  background: linear-gradient(135deg, #4F46E5 0%, #7C3AED 100%);
  padding: 60rpx 40rpx 120rpx; /* 底部留白给卡片上浮 */
  color: #fff;
  position: relative;
  overflow: hidden;
  border-bottom-right-radius: 40rpx;
  border-bottom-left-radius: 40rpx;
}

.hero-badge {
  display: inline-block;
  background: rgba(255,255,255,0.2);
  padding: 6rpx 20rpx;
  border-radius: 100rpx;
  font-size: 22rpx;
  margin-bottom: 24rpx;
  backdrop-filter: blur(4px);
}

.hero-title {
  font-size: 56rpx;
  font-weight: 800;
  line-height: 1.2;
  margin-bottom: 20rpx;
  position: relative; z-index: 2;
}

.hero-desc {
  font-size: 28rpx;
  opacity: 0.9;
  position: relative; z-index: 2;
}

.hero-img {
  position: absolute;
  right: -40rpx;
  bottom: -20rpx;
  width: 360rpx;
  height: 360rpx;
  opacity: 0.9;
}

/* 操作卡片区 */
.action-section {
  padding: 0 40rpx;
  margin-top: -80rpx; /* 上浮重叠 */
  position: relative; z-index: 10;
}

.action-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
  transition: transform 0.1s;
}

.action-card:active {
  transform: scale(0.98);
}

.action-icon-box {
  width: 100rpx; height: 100rpx;
  border-radius: 20rpx;
  background: #EEF2FF;
  display: flex; align-items: center; justify-content: center;
  margin-right: 30rpx;
}
.action-icon-box.secondary { background: #F0FDF4; }

.action-icon { font-size: 44rpx; }

.action-content { flex: 1; }
.action-title { font-size: 32rpx; font-weight: 700; color: #111827; margin-bottom: 8rpx; }
.action-desc { font-size: 24rpx; color: #6B7280; }

.action-arrow { color: #D1D5DB; font-weight: 600; font-size: 36rpx; }

/* 特性区 */
.feature-section {
  padding: 40rpx;
  margin-top: 20rpx;
}

.section-title {
  font-size: 32rpx; font-weight: 700; color: #1F2937;
  margin-bottom: 40rpx;
  text-align: center;
}

.feature-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.feature-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  display: flex; flex-direction: column; align-items: center; text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.feature-icon { font-size: 48rpx; margin-bottom: 20rpx; }
.feature-text { font-size: 26rpx; color: #4B5563; font-weight: 500; }